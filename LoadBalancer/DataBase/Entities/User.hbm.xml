<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="LoadBalancer">
    <class name="LoadBalancer.DataBase.Entities.User" table="users" persister="NHibernate.Persister.EntityPersister">
        <id name="Id">
            <generator class="native"/>
        </id>
        <property name="Name"/>
        <property name="Email"/>
        <property name="Sex"/>
        <bag name="Todos" inverse="true" cascade="all-delete-orphan">
            <key column="UserId"/>
            <one-to-many class="LoadBalancer.DataBase.Entities.Todo"/>
        </bag>
    </class>
</hibernate-mapping>